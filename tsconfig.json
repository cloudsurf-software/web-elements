{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Output directory for .js and .d.ts files
    "declaration": true, // Generate .d.ts files
    "declarationDir": "./dist", // Output directory for .d.ts files
    "rootDir": "./src" // Root directory of your source files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
