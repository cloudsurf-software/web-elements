{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
